---
import Layout from '../layouts/Layout.astro';

// GitHub configuration - 请修改为你的仓库信息
const githubConfig = {
  owner: 'BEGINRX',
  repo: 'BEGINRX.github.io',
  // 需要在 GitHub 设置中生成 Personal Access Token
  // 或使用 GitHub Issues API 让访客直接创建 issue
};

// 从 GitHub Issues 获取公开留言
// 标记为 'guestbook' 且 'public' 标签的 issues
async function getGuestbookMessages() {
  try {
    const response = await fetch(
      `https://api.github.com/repos/${githubConfig.owner}/${githubConfig.repo}/issues?labels=guestbook,public&state=open&sort=created&direction=desc&per_page=50`
    );
    if (response.ok) {
      return await response.json();
    }
  } catch (e) {
    console.error('Failed to fetch guestbook messages:', e);
  }
  return [];
}

const messages = await getGuestbookMessages();
---

<Layout title="留言板 - 我的个人网站" description="给我留言吧">
  <section class="py-16">
    <div class="container">
      <h1 class="mb-8 text-center text-4xl font-bold">留言板</h1>

      <!-- 留言表单 -->
      <div class="card mb-12">
        <h2 class="mb-6 text-2xl font-semibold">写留言</h2>
        <form
          id="guestbook-form"
          class="space-y-4"
          onsubmit="handleSubmit(event)"
        >
          <div>
            <label for="name" class="mb-2 block text-sm font-medium">
              你的名字
            </label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="lxr的朋友"
              class="w-full rounded-lg border bg-gray-50 px-4 py-2 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20 dark:bg-gray-800"
            />
          </div>

          <div>
            <label for="message" class="mb-2 block text-sm font-medium">
              留言内容 <span class="text-red-500">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              placeholder="写下你的留言..."
              class="w-full rounded-lg border bg-gray-50 px-4 py-2 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20 dark:bg-gray-800"
            ></textarea>
          </div>

          <div>
            <label class="mb-2 block text-sm font-medium">可见性</label>
            <div class="flex gap-4">
              <label class="flex items-center gap-2 cursor-pointer">
                <input
                  type="radio"
                  name="visibility"
                  value="public"
                  checked
                  class="text-primary-600 focus:ring-primary-500"
                />
                <span>公开</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input
                  type="radio"
                  name="visibility"
                  value="private"
                  class="text-primary-600 focus:ring-primary-500"
                />
                <span>仅 lxr 可见</span>
              </label>
            </div>
          </div>

          <div id="form-status" class="hidden rounded-lg p-4 text-sm"></div>

          <button
            type="submit"
            class="btn btn-primary w-full"
          >
            提交留言
          </button>
        </form>
      </div>

      <!-- 留言列表 -->
      <div class="mb-8">
        <h2 class="mb-6 text-2xl font-semibold">公开留言</h2>

        {messages.length > 0 ? (
          <div class="space-y-4">
            {messages.map((msg: any) => (
              <div class="card">
                <div class="mb-3 flex items-center gap-3">
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary-100 text-primary-700 dark:bg-primary-900/30 dark:text-primary-300">
                    {msg.user?.login?.[0]?.toUpperCase() || '?'}
                  </div>
                  <div>
                    <p class="font-medium">
                      {msg.title.match(/^\[(.*?)\]/)?.[1] || '匿名'}
                    </p>
                    <p class="text-sm text-gray-500">
                      {new Date(msg.created_at).toLocaleDateString('zh-CN', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                      })}
                    </p>
                  </div>
                </div>
                <div class="prose prose-gray max-w-none dark:prose-invert">
                  <p set:html={msg.body} />
                </div>
                {msg.reactions && msg.reactions.total_count > 0 && (
                  <div class="mt-3 flex gap-2">
                    {msg.reactions.map((reaction: any) => reaction.count > 0 && (
                      <span class="rounded-full bg-gray-100 px-2 py-1 text-sm dark:bg-gray-700">
                        {reaction.content} {reaction.count}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            ))}
          </div>
        ) : (
          <div class="card text-center text-gray-600 dark:text-gray-400">
            <p>还没有公开留言，来留下第一条吧！</p>
          </div>
        )}
      </div>

      <!-- 说明 -->
      <div class="card bg-gray-50 dark:bg-gray-800/50">
        <h3 class="mb-2 font-semibold">关于留言板</h3>
        <ul class="list-inside list-disc space-y-1 text-sm text-gray-600 dark:text-gray-400">
          <li>留言通过 GitHub Issues 存储</li>
          <li>公开留言会显示在下方</li>
          <li>私密留言只有 lxr 可以看到</li>
          <li>请遵守网络礼仪，文明发言</li>
        </ul>
      </div>
    </div>
  </section>
</Layout>

<script>
  const githubOwner = 'BEGINRX';
  const githubRepo = 'BEGINRX.github.io';

  async function handleSubmit(event: SubmitEvent) {
    event.preventDefault();

    const form = event.target as HTMLFormElement;
    const formData = new FormData(form);
    const name = formData.get('name') as string || 'lxr的朋友';
    const message = formData.get('message') as string;
    const visibility = formData.get('visibility') as string;

    const statusDiv = document.getElementById('form-status')!;
    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;

    // 显示加载状态
    submitBtn.disabled = true;
    submitBtn.textContent = '提交中...';
    statusDiv.className = 'rounded-lg p-4 text-sm bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300';
    statusDiv.textContent = '正在提交...';
    statusDiv.classList.remove('hidden');

    try {
      // 跳转到 GitHub 创建 issue
      const issueTitle = `[${name}] 的留言`;
      const issueBody = message + `\n\n---
**可见性**: ${visibility === 'public' ? '公开' : '私密'}
**提交时间**: ${new Date().toLocaleString('zh-CN')}
`;

      const labels = visibility === 'public' ? ['guestbook', 'public'] : ['guestbook', 'private'];

      // 构造 GitHub 新建 issue URL
      const githubUrl = `https://github.com/${githubOwner}/${githubRepo}/issues/new` +
        `?title=${encodeURIComponent(issueTitle)}` +
        `&body=${encodeURIComponent(issueBody)}` +
        `&labels=${encodeURIComponent(labels.join(','))}`;

      // 在新窗口打开 GitHub
      window.open(githubUrl, '_blank');

      statusDiv.className = 'rounded-lg p-4 text-sm bg-green-50 text-green-700 dark:bg-green-900/30 dark:text-green-300';
      statusDiv.textContent = '请在打开的 GitHub 页面中完成提交，提交后刷新页面查看。';

      form.reset();
    } catch (error) {
      statusDiv.className = 'rounded-lg p-4 text-sm bg-red-50 text-red-700 dark:bg-red-900/30 dark:text-red-300';
      statusDiv.textContent = '提交失败，请稍后重试。';
      console.error('Error:', error);
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = '提交留言';
    }
  }
</script>
