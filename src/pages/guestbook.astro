---
import Layout from '../layouts/Layout.astro';

// 从本地 JSON 文件读取留言
// 你可以手动添加留言到这个文件
async function getGuestbookMessages() {
  try {
    const messages = await import('../../guestbook.json', {
      assert: { type: 'json' }
    });
    return messages.default || [];
  } catch (e) {
    return [];
  }
}

const messages = await getGuestbookMessages();

// 获取唯一的名字列表（用于头像首字母）
const uniqueNames = [...new Set(messages.map((m: any) => m.name))];
---

<Layout title="留言板 - 我的个人网站" description="给我留言吧">
  <section class="py-16 bg-gradient-to-br from-blue-50 to-blue-100 dark:from-gray-900 dark:to-blue-950">
    <div class="container">
      <h1 class="mb-8 text-center text-4xl font-bold text-blue-900 dark:text-blue-100">留言板</h1>

      <!-- 留言表单 -->
      <div class="card mb-12">
        <h2 class="mb-6 text-2xl font-semibold text-blue-900 dark:text-blue-100">写留言</h2>
        <form
          id="guestbook-form"
          class="space-y-4"
          action="https://formspree.io/f/YOUR_FORM_ID"
          method="POST"
        >
          <div>
            <label for="name" class="mb-2 block text-sm font-medium text-gray-900 dark:text-gray-100">
              你的名字 <span class="text-gray-500">(可选，默认：lxr的朋友)</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="lxr的朋友"
              class="w-full rounded-lg border border-blue-200 bg-gray-50 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 dark:border-blue-700 dark:bg-gray-800"
            />
          </div>

          <div>
            <label for="message" class="mb-2 block text-sm font-medium text-gray-900 dark:text-gray-100">
              留言内容 <span class="text-red-500">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              placeholder="写下你的留言..."
              class="w-full rounded-lg border border-blue-200 bg-gray-50 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 dark:border-blue-700 dark:bg-gray-800"
            ></textarea>
          </div>

          <div>
            <label class="mb-2 block text-sm font-medium text-gray-900 dark:text-gray-100">可见性</label>
            <div class="flex gap-4">
              <label class="flex items-center gap-2 cursor-pointer">
                <input
                  type="radio"
                  name="visibility"
                  value="public"
                  checked
                  class="text-blue-700 focus:ring-blue-500"
                />
                <span>公开</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input
                  type="radio"
                  name="visibility"
                  value="private"
                  class="text-blue-700 focus:ring-blue-500"
                />
                <span>仅 lxr 可见</span>
              </label>
            </div>
          </div>

          <!-- 隐藏字段：用于过滤垃圾留言 -->
          <input type="text" name="_gotcha" style="display:none" />

          <button
            type="submit"
            class="btn btn-primary w-full"
          >
            提交留言
          </button>

          <p class="mt-4 text-center text-sm text-gray-500">
            提交后会发送邮件给 lxr 审核
          </p>
        </form>
      </div>

      <!-- 留言列表 -->
      <div class="mb-8">
        <h2 class="mb-6 text-2xl font-semibold text-blue-900 dark:text-blue-100">
          公开留言 ({messages.length})
        </h2>

        {messages.length > 0 ? (
          <div class="space-y-4">
            {messages.map((msg: any) => (
              <div class="card">
                <div class="mb-3 flex items-center gap-3">
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300">
                    {msg.name?.[0]?.toUpperCase() || '?'}
                  </div>
                  <div>
                    <p class="font-medium">{msg.name}</p>
                    <p class="text-sm text-gray-500">
                      {new Date(msg.date).toLocaleDateString('zh-CN', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </p>
                  </div>
                </div>
                <div class="prose prose-gray max-w-none dark:prose-invert">
                  <p>{msg.message}</p>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="card text-center text-gray-600 dark:text-gray-400">
            <p>还没有公开留言，来留下第一条吧！</p>
          </div>
        )}
      </div>

      <!-- 说明 -->
      <div class="card bg-blue-50 dark:bg-blue-900/20">
        <h3 class="mb-2 font-semibold text-blue-900 dark:text-blue-100">关于留言板</h3>
        <ul class="list-inside list-disc space-y-1 text-sm text-gray-600 dark:text-gray-400">
          <li>留言发送到邮箱，经 lxr 审核后显示</li>
          <li>请文明发言，遵守网络礼仪</li>
          <li>违规内容将不会被展示</li>
        </ul>
      </div>
    </div>
  </section>
</Layout>

<style>
  .btn-primary {
    @apply bg-blue-700 hover:bg-blue-800 text-white;
  }
</style>
