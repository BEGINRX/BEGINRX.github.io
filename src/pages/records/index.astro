---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all records
const allRecords = await getCollection('records');
const sortedRecords = allRecords.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Get filter type from URL
const filterType = Astro.url.searchParams.get('type');

// Filter records by type
const filteredRecords = filterType
  ? sortedRecords.filter(r => r.data.type === filterType)
  : sortedRecords;

// Count by type
const counts = {
  all: sortedRecords.length,
  log: sortedRecords.filter(r => r.data.type === 'log').length,
  doc: sortedRecords.filter(r => r.data.type === 'doc').length,
  quote: sortedRecords.filter(r => r.data.type === 'quote').length,
};

const typeLabels = {
  all: '全部',
  log: '日志',
  doc: '文档',
  quote: '短句',
};
---

<Layout title="个人记录 - 我的个人网站" description="我的日志、文档和短句">
  <section class="py-16">
    <div class="container">
      <h1 class="mb-8 text-center text-4xl font-bold">个人记录</h1>

      <!-- Filter Tabs -->
      <div class="mb-8 flex flex-wrap justify-center gap-2">
        {Object.entries(counts).map(([type, count]) => (
          <a
            href={type === 'all' ? '/records' : `/records?type=${type}`}
            class:list={[
              "rounded-lg px-4 py-2 text-sm font-medium transition-colors",
              {
                "bg-primary-600 text-white": filterType === type || (filterType === null && type === 'all'),
                "bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700":
                  filterType !== type && !(filterType === null && type === 'all'),
              }
            ]}
          >
            {typeLabels[type]} ({count})
          </a>
        ))}
      </div>

      <!-- Records Grid -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {filteredRecords.map((record) => (
          <a href={`/records/${record.slug}`} class="card group">
            {record.data.image && (
              <div class="mb-4 aspect-video overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-700">
                <img
                  src={record.data.image}
                  alt={record.data.title}
                  class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
              </div>
            )}

            <div class="mb-2 text-sm">
              <span class:list={[
                "inline-block rounded-full px-2 py-1 text-xs font-medium",
                {
                  "bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300": record.data.type === 'log',
                  "bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300": record.data.type === 'doc',
                  "bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300": record.data.type === 'quote',
                }
              ]}>
                {record.data.type === 'log' && '日志'}
                {record.data.type === 'doc' && '文档'}
                {record.data.type === 'quote' && '短句'}
              </span>
            </div>

            <h3 class="mb-2 font-semibold group-hover:text-primary-600">
              {record.data.title}
            </h3>

            <p class="text-sm text-gray-600 dark:text-gray-400">
              {record.data.date.toLocaleDateString('zh-CN')}
            </p>
          </a>
        ))}
      </div>

      {filteredRecords.length === 0 && (
        <div class="card text-center text-gray-600 dark:text-gray-400">
          <p>暂无{filterType ? typeLabels[filterType] : ''}记录</p>
        </div>
      )}
    </div>
  </section>
</Layout>
