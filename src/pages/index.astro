---
import Layout from '../layouts/Layout.astro';
const tags = ['神经科学', '脑机接口', '可穿戴设备', '人工智能'];
---

<Layout title="主页 - 李没病" description="你好，这里是李没病">
  <section class="min-h-screen flex items-center bg-gradient-to-br from-blue-50 to-blue-100 dark:from-gray-900 dark:to-blue-950">
    <div class="container">
      <div class="flex items-center justify-between">
        <!-- 左侧打字文字 -->
        <div class="max-w-2xl">
          <h1 class="text-6xl md:text-7xl lg:text-8xl font-bold leading-tight">
            <span class="typing-container block">
              <span id="line1" class="typing-line"></span>
            </span>
            <span class="typing-container block">
              <span id="line2" class="typing-line"></span>
            </span>
          </h1>
        </div>

        <!-- 右侧标签 -->
        <div class="flex flex-col gap-4">
          {tags.map((tag) => (
            <span class="side-tag">{tag}</span>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .side-tag {
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, rgba(30, 58, 138, 0.8), rgba(37, 99, 235, 0.8));
    color: white;
    border-radius: 9999px;
    font-size: 1.125rem;
    font-weight: 500;
    box-shadow: 0 4px 15px rgba(30, 58, 138, 0.3);
    white-space: nowrap;
    transition: transform 0.3s ease, background 0.3s ease;
  }

  .side-tag:hover {
    transform: scale(1.05);
    background: linear-gradient(135deg, rgba(30, 58, 138, 1), rgba(37, 99, 235, 1));
  }

  .typing-container {
    min-height: 1.2em;
  }

  .typing-line.typing::after {
    content: '|';
    animation: blink 1s infinite;
    margin-left: 2px;
    color: #1e3a8a;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }
</style>

<script>
  const line1 = document.getElementById('line1');
  const line2 = document.getElementById('line2');

  async function typeText(element, htmlContent, speed = 150) {
    element.classList.add('typing');
    await new Promise(resolve => setTimeout(resolve, speed));

    // 第一行：你好！
    element.textContent = '你好！';

    await new Promise(resolve => setTimeout(resolve, speed));
    element.classList.remove('typing');
  }

  async function typeText2(element, speed = 150) {
    element.classList.add('typing');
    await new Promise(resolve => setTimeout(resolve, 300));

    // 第二行：我是 李没病（分颜色）
    const text1 = '我是';
    const text2 = ' 李没病';

    element.innerHTML = '';

    // 打字"我是"
    for (let i = 0; i < text1.length; i++) {
      const span = document.createElement('span');
      span.className = 'text-gray-900 dark:text-white';
      span.textContent = text1[i];
      element.appendChild(span);
      await new Promise(resolve => setTimeout(resolve, speed));
    }

    // 打字" 李没病"
    for (let i = 0; i < text2.length; i++) {
      const span = document.createElement('span');
      span.className = 'text-blue-700 dark:text-blue-300';
      span.textContent = text2[i];
      element.appendChild(span);
      await new Promise(resolve => setTimeout(resolve, speed));
    }

    await new Promise(resolve => setTimeout(resolve, speed));
    element.classList.remove('typing');
  }

  async function startTyping() {
    await typeText(line1);
    await typeText2(line2);
  }

  startTyping();
</script>
