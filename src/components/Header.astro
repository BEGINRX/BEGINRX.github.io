---
const navItems = [
  { name: '主页', href: '/' },
  { name: '经历', href: '/experience' },
  { name: '留言板', href: '/guestbook' },
];
---

<header class="sticky top-0 z-50 border-b border-blue-200 bg-white/90 backdrop-blur-sm dark:border-blue-800 dark:bg-gray-900/90">
  <nav class="container flex h-16 items-center justify-center">
    <ul class="flex items-center gap-8">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              "text-base font-semibold transition-colors hover:text-blue-700 dark:hover:text-blue-300",
              { "text-blue-700 dark:text-blue-300": Astro.url.pathname === item.href },
            ]}
          >
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
